{
  "name": "hello-nestjs",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.7",
    "@nestjs/core": "^6.7",
    "@nestjs/passport": "^6.1",
    "@nestjs/jwt": "^6.1",
    "@nestjs/platform-express": "^9.2",
    "passport": "^0.4",
    "passport-local": "^1.0",
    "passport-jwt": "^4",
    "reflect-metadata": "^0.1",
    "rimraf": "^3.0",
    "rxjs": "^6.5",
    "knex": "^0.20",
    "pg": "^7",
    "nanoid": "^2"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.9",
    "@nestjs/schematics": "^6.7",
    "@nestjs/testing": "^6.7",
    "@types/express": "^4.17",
    "@types/jest": "^24.0",
    "@types/node": "^12.7",
    "@types/passport-local": "^1.0",
    "@types/passport-jwt": "^3.0",
    "@types/supertest": "^2.0",
    "@types/knex": "^0.16",
    "jest": "^24.9",
    "prettier": "^1.18",
    "supertest": "^4.0",
    "ts-jest": "^24.1",
    "ts-loader": "^6.1",
    "ts-node": "^8.4",
    "tsconfig-paths": "^3.9",
    "tslint": "^5.20",
    "typescript": "^3.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
